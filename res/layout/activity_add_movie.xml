<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/addMovieBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/back_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Movie"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/addMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Insert the title of the movie..."
            android:layout_gravity="center"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:id="@+id/addMovieImage"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/upload_icon"/>

        <EditText
            android:id="@+id/addMovieDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Insert the desciption of the movie..."
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:inputType="textMultiLine"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadMovie"
            android:text="Upload"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</ScrollView>